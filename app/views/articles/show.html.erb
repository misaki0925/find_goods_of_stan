<% breadcrumb :article_show, @article %>
<div class = "content">
  <div class="card border-white border-1 rounded-0 text-dark bg-white pt-3 pb-5 mx-auto mt-5 mb-3" style="width: 100%; height: 100%;">
    <% names = [] %>
    <% @article.members.each do |member|%>
      <% names.push(member.name) %>
      <div class="card-body mt-3">
        <div class="card-body-text mb-5 text-center">
          <h5 class="card-title"><%= "#{names.join("さん")}さん" %></h5>
          <p class="card-text"><%= "<Brand>#{@article.brand}" %></p>
          <p class="card-text"><%= "<Price>      #{@article.price}" %></p>
          <p class="card-text"><%= "<Item>      #{@article.item}" %></p>
          <%= link_to "詳しくはTweetをご覧ください", @article.tweet_url, target: :_blank, rel: "noopener noreferrer", class: "btn btn-outline-light border-dark border-1 rounded-0 text-dark " %>
        </div>
        <div class="row justify-content-center">
          <% if @article.images.present? %>
            <% @article.images.each do |article_image| %>
              <div class="col-md-5 col-sm-12 mx-4 py-4">
                <%= image_tag article_image, class: "card-img-top", alt: "Card image cap" %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
